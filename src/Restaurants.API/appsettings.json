{
  "ConnectionStrings": {
    "RestaurantsDB": "Server=.;Database=RestaurantsDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Serilog": {

    "MinimumLevel": {
        "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameWorkCore": "Information"
      }
    },
    
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp: dd-MM HH:mm:ss} {Level:u3}] |{SourceContext}  |  {NewLine} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Restaurant-API-.log", // Use lowercase for file extensions
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "[{Timestamp:dd-MM HH:mm:ss} {Level:u3}] | {SourceContext} | {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}